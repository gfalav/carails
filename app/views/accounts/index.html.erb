<h1>Listing accounts</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Ancestry</th>
    <th>Taverage</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @accounts.each do |account| %>
  <tr>
    <td><%= link_to account.name, :controller=>'accounts', :action=>'index', :id=>account.id %></td>
    <td><%= account.ancestry %></td>
    <td><%= account.taverage %></td>
    <td><%= link_to 'Show', account %></td>
    <td><%= link_to 'Edit', edit_account_path(account) %></td>
    <td><%= link_to 'Destroy', account, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

